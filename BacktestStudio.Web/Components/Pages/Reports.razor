@page "/reports"

<PageTitle>分析報表 - BacktestStudio</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5">分析報表</h1>
                <div class="btn-group">
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-download"></i> 匯出CSV
                    </button>
                    <button class="btn btn-outline-secondary">
                        <i class="bi bi-file-pdf"></i> 匯出PDF
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- 績效總覽 -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">總獲利</h6>
                    <h3 class="card-title text-success">+$12,580</h3>
                    <small class="text-success">+12.58%</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">勝率</h6>
                    <h3 class="card-title">68.5%</h3>
                    <small class="text-muted">87/127 筆交易</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">最大回撤</h6>
                    <h3 class="card-title text-danger">-5.2%</h3>
                    <small class="text-muted">-$5,200</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">夏普比率</h6>
                    <h3 class="card-title">1.85</h3>
                    <small class="text-success">優秀</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-graph-up"></i> 績效趨勢</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 績效趨勢圖表開發中，將顯示累積獲利和回撤曲線
                    </div>
                    
                    <!-- 預覽圖表區域 -->
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 300px; border: 2px dashed #dee2e6; border-radius: 0.375rem;">
                        <div class="text-center text-muted">
                            <i class="bi bi-graph-up display-1"></i>
                            <p class="mt-3">績效趨勢圖將在此顯示</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6><i class="bi bi-pie-chart"></i> 獲利分布</h6>
                </div>
                <div class="card-body">
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px; border: 2px dashed #dee2e6; border-radius: 0.375rem;">
                        <div class="text-center text-muted">
                            <i class="bi bi-pie-chart display-4"></i>
                            <p class="mt-2 small">圓餅圖</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="bi bi-filter"></i> 報表篩選</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label small">策略</label>
                        <select class="form-select form-select-sm">
                            <option>全部策略</option>
                            <option>長線策略</option>
                            <option>短線策略</option>
                            <option>均值回歸策略</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small">日期範圍</label>
                        <select class="form-select form-select-sm">
                            <option>最近30天</option>
                            <option>最近3個月</option>
                            <option>最近一年</option>
                            <option>全部期間</option>
                        </select>
                    </div>
                    <button class="btn btn-primary btn-sm w-100">套用篩選</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 詳細交易記錄 -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-table"></i> 交易記錄</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>日期</th>
                                    <th>策略</th>
                                    <th>類型</th>
                                    <th>價格</th>
                                    <th>數量</th>
                                    <th>損益</th>
                                    <th>累積</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2025-02-01</td>
                                    <td>長線策略</td>
                                    <td><span class="badge bg-success">買入</span></td>
                                    <td>$15,200</td>
                                    <td>100</td>
                                    <td class="text-success">+$850</td>
                                    <td class="text-success">+$12,580</td>
                                </tr>
                                <tr>
                                    <td>2025-01-28</td>
                                    <td>短線策略</td>
                                    <td><span class="badge bg-danger">賣出</span></td>
                                    <td>$14,980</td>
                                    <td>50</td>
                                    <td class="text-danger">-$120</td>
                                    <td class="text-success">+$11,730</td>
                                </tr>
                                <tr>
                                    <td>2025-01-25</td>
                                    <td>長線策略</td>
                                    <td><span class="badge bg-success">買入</span></td>
                                    <td>$14,750</td>
                                    <td>75</td>
                                    <td class="text-success">+$425</td>
                                    <td class="text-success">+$11,850</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- 分頁 -->
                    <nav>
                        <ul class="pagination pagination-sm justify-content-center mt-3">
                            <li class="page-item disabled"><a class="page-link" href="#">上一頁</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">下一頁</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>